{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "ngserve",
            "type": "shell",
            "command": "echo Starting build... && ng serve",
            // "command": "echo Starting build... && ng serve --host 0.0.0.0 --proxy-config proxy.FIRST-DEFINE-ONE.conf.json",
            "isBackground": true,
            "problemMatcher": [
                {
                    "pattern": [
                        {
                            "regexp": "\\b\\B",
                            "file": 1,
                            "location": 2,
                            "message": 3
                        }
                    ],
                    "background": {
                        "activeOnStart": false,
                        "beginsPattern": "Starting build...",
                        "endsPattern": "^.*wdm.: Compiled successfully."
                    }
                }
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
          "label": "Generate API classes",
          "type": "shell",
          "command": "npm run generate-api",
          "problemMatcher": [],
          "dependsOn": [],
        },
        {
          "label": "Refresh i18n",
          "type": "shell",
          "command": "npm run extract-i18n",
          "problemMatcher": [],
          "dependsOn": [],
        }
    ]
}
